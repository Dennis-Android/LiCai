<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    android:orientation="vertical" >
    
           
      <include layout="@layout/titlebar"/>
    
      
            
       <LinearLayout 
           android:layout_marginTop="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@color/white"
           android:gravity="center_vertical"
            >
            <ImageView 
               android:layout_margin="10dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:src="@drawable/account"
                />
            <TextView 
                android:layout_weight="1"
                android:layout_width="0dp"    
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textSize="20sp"
                android:textColor="@color/black"
               />
            
        </LinearLayout>
      
       <ImageView 
       
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:src="@drawable/logo_xian" 
       
         android:scaleType="fitXY" />
      
       <LinearLayout 
           
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@color/white"
           android:gravity="center_vertical"
            >
            <ImageView 
              android:layout_margin="10dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:visibility="invisible"
               android:src="@drawable/account"
                />
            <TextView 
                android:layout_weight="1"
                android:layout_width="0dp"    
                android:layout_height="wrap_content"
                android:text="账户"
                android:textSize="17sp"
                android:textColor="@color/grey"
               />
            
            <TextView 
                android:id="@+id/account_number"
                android:layout_marginRight="10dp" 
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"
               
                android:textSize="17sp"
                android:textColor="@color/grey"
                
               />
        </LinearLayout>
      <ImageView 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:src="@drawable/logo_xian" 
         android:scaleType="fitXY" />
      
       <LinearLayout 
           
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@color/white"
           android:gravity="center_vertical"
            >
            <ImageView 
               android:visibility="invisible"
               android:layout_margin="10dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:src="@drawable/account"
                />
            <TextView 
                android:layout_weight="1"
                android:layout_width="0dp"    
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textSize="17sp"
               android:textColor="@color/grey"
               />
            
        </LinearLayout>
      
     <ImageView 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:src="@drawable/logo_xian" 
         android:scaleType="fitXY" />
       
        <LinearLayout 
           
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@color/white"
           android:gravity="center_vertical"
            >
            <ImageView 
               android:layout_margin="10dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:visibility="invisible"
               android:src="@drawable/account"
                />
            <TextView 
                android:layout_weight="1"
                android:layout_width="0dp"    
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textSize="17sp"
                android:textColor="@color/grey"
               />
            
        </LinearLayout>
        <ImageView 
       
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:src="@drawable/logo_xian" 
       
         android:scaleType="fitXY" />
        <LinearLayout 
           android:id="@+id/bankcard_ll"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:background="@color/white"
            >
            <ImageView 
               android:layout_margin="10dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:src="@drawable/account"
                android:visibility="invisible" 
                />
            <TextView 
                android:layout_weight="1"
                android:layout_width="0dp"    
                android:layout_height="wrap_content"
                android:text="我的银行卡"
                android:textSize="18sp"
                android:textColor="@color/grey"
               />
           <ImageView 
               android:layout_margin="12dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:src="@drawable/list_detail_arrow"
                
                />
        </LinearLayout>
       
        <ImageView 
       
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:src="@drawable/logo_xian" 
       
         android:scaleType="fitXY" />
        <LinearLayout 
           android:layout_marginTop="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@color/white"
           android:gravity="center_vertical"
            >
            <ImageView 
               android:layout_margin="12dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:src="@drawable/accoun_center_ioc_two"
                />
            <TextView 
                android:layout_weight="1"
                android:layout_width="0dp"    
                android:layout_height="wrap_content"
                android:text="账户安全"
                android:textSize="20sp"
                android:textColor="@color/black"
               />
            
        </LinearLayout>
       
        <ImageView 
       
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:src="@drawable/logo_xian" 
       
         android:scaleType="fitXY" />
       
       <LinearLayout 
           android:id="@+id/edit_pass_ll"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:background="@color/white"
            >
            <ImageView 
               android:layout_margin="10dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:src="@drawable/account"
                android:visibility="invisible" 
                />
            <TextView 
                android:layout_weight="1"
                android:layout_width="0dp"    
                android:layout_height="wrap_content"
                android:text="修改登录密码"
                android:textSize="18sp"
                android:textColor="@color/grey"
               />
           <ImageView 
               android:layout_margin="12dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:src="@drawable/list_detail_arrow"
                
                />
        </LinearLayout>
       
     <ImageView 
       
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:src="@drawable/logo_xian" 
       
         android:scaleType="fitXY" />
       <LinearLayout 
           android:id="@+id/edit_jiaoyi_ll"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:background="@color/white"
            >
            <ImageView 
               android:layout_margin="10dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:src="@drawable/account"
                android:visibility="invisible" 
                />
            <TextView 
                android:layout_weight="1"
                android:layout_width="0dp"    
                android:layout_height="wrap_content"
                android:text="修改交易密码"
                android:textSize="18sp"
                android:textColor="@color/grey"
               />
           <ImageView 
               android:layout_margin="12dp"
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:src="@drawable/list_detail_arrow"
                
                />
        </LinearLayout>
       
       
        <ImageView 
       
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:src="@drawable/logo_xian" 
       
         android:scaleType="fitXY" />
       
      
        
          <Button 
              android:id="@+id/exit_login"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="退出登录"
              android:textColor="@color/white"
              android:background="@drawable/button_selector"
              android:layout_margin="12dp"
             />
           
       
       
       
       
       
       
       
       
       
       
       
       
       
    
    
</LinearLayout>
