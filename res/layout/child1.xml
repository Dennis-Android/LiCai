<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
     <!-- 产品名称 -->
     <TextView 
         android:id="@+id/child_product_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:text="新手标B1236"
         android:layout_marginTop="20dp"
         android:textColor="@color/black"
         />
     
      <!-- 标签 -->
     <TextView 
         android:id="@+id/child_operation_tag"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/product_red"
         android:layout_alignParentRight="true"
         android:text="新手标"
         android:gravity="center"
         android:layout_alignBottom="@id/child_product_name"
         android:layout_marginTop="20dp"
         android:textColor="@color/white"
         />
    
     
     <!--年化 -->
       <TextView
              android:id="@+id/child_annual_rate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/child_product_name"
              android:layout_below="@+id/child_product_name"
              android:layout_marginTop="10dp"
              android:textColor="@color/red"
              android:text="10.00%"
              android:textSize="20sp" />
     
      <TextView
              android:id="@+id/yuqi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/child_annual_rate"
              android:layout_below="@+id/child_annual_rate"
              android:layout_marginTop="10dp"
               android:textColor="@color/black"
              android:text="预期年化"
              />
     
      
      
      <!-- 还款天数 -->
       <TextView
              android:id="@+id/child_period"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_alignTop="@id/child_annual_rate"
              android:layout_alignBottom="@id/child_annual_rate"
              android:layout_below="@+id/child_annual_rate"
              android:textSize="20sp"
              android:text="15天"
               android:textColor="@color/black"
              />
      
        <!-- 起购金额 -->
       <TextView
              android:id="@+id/child_starting_amount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/child_operation_tag"
              android:layout_alignTop="@id/child_annual_rate"
              android:layout_alignBottom="@id/child_annual_rate"
              android:textSize="20sp"
               android:textColor="@color/black"
              android:text="100元"
              />
      
      
      
    
    
         <!--到期自动还款 -->
       <TextView
             android:id="@+id/child_repayment_type" 
             android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_alignTop="@id/yuqi"
              android:layout_alignBottom="@id/yuqi"
              android:text="按月还款"
              android:textColor="@color/black"
              />
    
     
   <!-- 起购金额 -->
       <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignTop="@id/yuqi"
              android:layout_alignBottom="@id/yuqi" 
              android:layout_alignLeft="@id/child_starting_amount"
              android:text="起购金额"
             android:textColor="@color/black"
              />

       
 
          
          
          
          <ImageView 
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_xian"
            android:layout_alignParentBottom="true"
            />

        

</RelativeLayout>
